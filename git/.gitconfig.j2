# vim: ft=gitconfig
[user]
    name = {{ git_user_name }}
    email = {{ git_user_email }}
    signingkey = {{ git_user_signingkey }}

[alias]
    pr = !sh -c 'git fetch -f upstream "pull/$1/head:$1"' -
    mr = !sh -c 'git fetch -f upstream "merge-requests/$1/head:$1"' -

[commit]
    gpgsign = true

[pull]
    rebase = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations line-numbers side-by-side
[delta "decorations"]
    file-style = omit
    hunk-header-decoration-style = box ul
    hunk-header-style = file syntax
[delta "line-numbers"]
    line-numbers-left-style = auto
    line-numbers-right-style = auto
